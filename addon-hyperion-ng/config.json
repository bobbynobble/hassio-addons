{
  "name": "Hyperion.NG",
  "version": "2.0.0-alpha.5",
  "slug": "hyperion.ng",
  "description": "Hyperion is an opensource Bias or Ambient Lighting implementation",
  "url": "https://hyperion-project.org/",
  "arch": [
    "amd64",
    "armhf",
    "armv7",
    "aarch64"
  ],
  "startup": "application",
  "apparmor": false,
  "boot": "auto",
  "ports": {
    "8090/tcp": 8090,
    "8092/tcp": null,
    "19333/tcp": 19333,
    "19400/tcp": 19400,
    "19444/tcp": 19444,
    "19445/tcp": 19445
  },
  "ports_description": {
    "8090/tcp": "Web Admin",
    "8092/tcp": "SSL Web Admin",
    "19333/tcp": "Boblight Server",
    "19400/tcp": "Google Flatbuffers Receiver",
    "19444/tcp": "JSON-RPC Remote Control",
    "19445/tcp": "Protocol Buffers Server"
  },
  "map": [
    "config:rw"
  ],
  "image": "bradsjm/hyperion-ng-addon-{arch}",
  "options": {},
  "schema": {},
  "auto_uart": true,
  "usb": true,
  "video": true,
  "gpio": true,
  "devices": [
    "/dev/spidev0.0:/dev/spidev0.0:rwm"
  ],
  "webui": "http://[HOST]:[PORT:8090]"
}
